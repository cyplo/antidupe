{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "cargo clippy",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "run tests",
            "type": "shell",
            "command": "cargo clippy && cargo test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}